source 'https://rubygems.org'

# For testing
gem 'byebug', '~> 11.1', group: :development

# Web server
gem 'puma'
gem 'rackup'

# Redis for caching
gem 'redis', '~> 5.3'

# OpenAI API client
gem 'ruby-openai', '~> 7.1'

# Sinatra for the web app
gem 'sinatra'

# For rate limiting
gem 'rack-attack'

# Dotenv
gem 'dotenv'

# For testing
gem 'rack-test'
gem 'rspec'
